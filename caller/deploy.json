{
  "id": "/python-app-group2",
  "groups": [
    {
      "id": "/python-app-group2/app-group1",
      "apps": [
        {
          "id": "basic-3",
          "labels": {"HAPROXY_GROUP": "external"},
          "args": ["python", "caller.py", "3000", "10.53.15.211:10002"],
          "cpus": 0.30,
          "mem": 64,
          "ports": [
            34000
          ],
          "container": {
            "type": "DOCKER",
            "docker": {
              "image": "registry.global.gravity/vivek/caller:3",
              "network": "BRIDGE",
              "portMappings": [
                {
                  "containerPort": 3000,
                  "hostPort": 0,
 		  "servicePort": 10000
                }
              ]
            }
          },
          "healthChecks": [
            {
              "path": "/isHealthy",
              "protocol": "HTTP",
              "portIndex": 0,
              "command": null,
         "timeoutSeconds": 10,
              "maxConsecutiveFailures": 1,
              "gracePeriodSeconds": 15,
              "ignoreHttp1xx": false
            }
          ]
        }
      ]
    }
  ]
}
